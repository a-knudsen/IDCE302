#ex. 1 use % for remainders
print(6%3==0)

#now we're using if statements
water_pp = 20
if water_pp > 19:
  print water_pp, ': post emergenc levels'

#ex. 2 if and else
x = 16
if x%2 == 0:
  print "x is even"
else:
  print "oddity"

#ex. 3 function with if statement
def even_odd (y):
  if y%2 == 0:  
    print "even steven"
  else:
    print "odd ball"
even_odd(9)

#ex. 4 if, else if, and else
def ifequal(x, y):
  if x>y:
    print ("x wins")
  elif y>x:
    print ("y wins")
  else:
    print "tie!"
ifequal(3, 3)


# ex. 5
def countdown(n):
  if n == 0:
    print "Blastoff!"
  else:
    print n
    countdown(n-1)
countdown(8)

#ex. 6
def cube(z):
  print (z*z*z)
cube(3)

#ex. 7 kinda confused about this one
def sumInt(num):
  if num == 0:
    return 0 #basecase, when the loop ends
  else:
    return num + sumInt(num-1)
print sumInt(5)
